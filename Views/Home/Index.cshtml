@model Survey
  <h1 class="text-center mt-10 md-10"> Take a survey</h1>
        <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="process" asp-controller="Home" method="post"> 
            <div class="form-group row">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="Name" placeholder="name">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Location"></span>
                <label asp-for="Location" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                 <select class="custom-select mr-sm-2"  asp-for="Location" id="inlineFormCustomSelect">
                   
                    <option value="Seattle">Seattle</option>
                    <option value="DC">DC</option>
                    <option value="Bostion">Bostion</option>
                    <option value="online">online</option>
                </select>
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Language"></span>
                <label asp-for="Language" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                 <select class="custom-select mr-sm-2"  asp-for="Language" id="inlineFormCustomSelect">
                   
                    <option value="Csharp">C#</option>
                    <option value="Python">Python</option>
                    <option value="JavaScript">Javascript</option>
                </select>
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Comments"></span>
                <label asp-for="Comments" class="col-sm-2 col-form-label "></label> 
                <div class="col-sm-10">
                <textarea class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg"  asp-for="Comments"> </textarea>
                </div>
            </div>
            <button type="submit">Submit</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>